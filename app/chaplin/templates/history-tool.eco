<em class="ago"></em>
<div class="wrap">
    <a href="/tool/<%= @slug %>/id/<%= @guid %>">
        <div class="box">
            <h3><%= @name %></h3>
            <% if @description.length > 15: %>
                <p title="<%= @description %>"><%- @description[0...15] %> &hellip;</p>
            <% else: %>
                <p><%- @description %></p>
            <% end %>
        </div>
    </a>
</div>