<!-- help text provided? -->
<% if @help: %>
    <span class="entypo help right" title="Show help for this item"></span>
<% end %>

<!-- the link -->
<% if @extra: %>
    <a href="/tool/<%= @slug %>/<%= @extra %>/<%= @suffix %>"><%- @label %></a>
<% else: %>
    <a href="/tool/<%= @slug %>/<%= @suffix %>"><%- @label %></a>
<% end %>