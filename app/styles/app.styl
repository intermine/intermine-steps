@font-face {
  font-family: 'Lato';
  font-style: normal;
  font-weight: 700;
  src: local('Lato Bold'), local('Lato-Bold'), url('../fonts/LatoBold.woff') format('woff');
}
@font-face {
  font-family: 'Lato';
  font-style: normal;
  font-weight: 400;
  src: local('Lato Regular'), local('Lato-Regular'), url('../fonts/LatoRegular.woff') format('woff');
}

body, html
    height: 100%

body
    margin: 0
    background: transparent
    -webkit-font-smoothing: antialiased

    > div
        height: 100%

body, h1, h2, h3, h4, p, li
    font-family: Lato

label
    cursor: default

.row
    width: auto

div#wrapper
    width: 100%
    min-width: 1000px
    min-height: 100%

div#whiteout
    display: none
    position: absolute
    top: 0
    left: 0
    content: ""
    background: rgba(255,255,255,0.5)
    width: 100%
    height: 100%

header#top
    width: 100%

    .inner
        margin: 0 auto
        padding: 10px

    h1
        margin: 0
        padding: 0
        font-size: 20px
        font-weight: normal
        display: inline-block

    .account
        margin-top: 4px

        span
            display: inline-block
            margin: 0 4px
            font-size: 8px
            height: 5px
            margin-bottom: 4px

section#middle
    width: 100%
    padding: 0 0 100px
    height: 100%
    position: relative

    &:after
        content: '.'
        display: block
        clear: both
        visibility: hidden
        height: 0

    div#landing
        width: 1000px

        h2
            font-size: 20px

        ul
            list-style-type: none

    aside
        position: absolute
        top: 0
        width: 250px

        &#left
            left: 0

        &#right
            right: 0

        .wrap
            height: 100%
            position: relative
            padding: 10px 0

        a
            cursor: pointer

        p
            margin: 10px

        h3
            font-size: 16px
            margin: 10px

        ul
            list-style-type: none
            margin: 0 10px
            padding: 0

            li
                background-repeat: no-repeat
                background-position: 0 3px

    div#widget
        overflow: hidden

        ul.list, ol.list
            a
                cursor: pointer

        ul.list
            list-style-type: none

        h1
            font-size: 22px

        h2
            font-size: 18px

        .wrap
            padding: 0 0 0 250px // no space for right sidebar

        .wrap.sidebar
            padding: 0 300px // make space for both sidebars and some

        .half
            float: left
            width: 50%

        ul.accordion
            margin: 0 0 22px 0
            border-bottom: 1px solid #e9e9e9
            
            > li
                list-style: none;
                margin: 0;
                padding: 0;
                border-top: 1px solid #e9e9e9;
                
                > div.title
                    background: #f6f6f6
                    padding: 15px
                    margin: 0
                    position: relative
                    border-left: 1px solid #e9e9e9
                    border-right: 1px solid #e9e9e9
                    -webkit-transition: 0.15s background linear
                    -moz-transition: 0.15s background linear
                    -o-transition: 0.15s background linear
                    transition: 0.15s background linear
                    
                    h1, h2, h3, h4, h5
                        margin: 0;
                    
                    &:after
                        content: ""
                        display: block
                        width: 0
                        height: 0
                        border: solid 6px
                        border-color: transparent #9d9d9d transparent transparent
                        position: absolute
                        right: 15px
                        top: 21px;
                
                .content
                    display: none
                    padding: 15px
        
                &.active
                    border-top: 3px solid #2ba6cb
                    
                    .title
                        background: white
                        padding-top: 13px
                        
                        &:after
                            content: ""
                            display: block
                            width: 0
                            height: 0
                            border: solid 6px
                            border-color: #9d9d9d transparent transparent transparent
        
                    .content
                        background: #FFF
                        display: block
                        border-left: 1px solid #e9e9e9
                        border-right: 1px solid #e9e9e9

div#history
    position: absolute
    bottom: 0
    left: 250px // width of the sidebar
    height: 50% // take up half the screen
    display: none
    background: #FFF

    div.container
        height: 100%
        border-top: 3px solid #5da423
        border-left: 1px solid #e9e9e9
        padding: 15px

    div.head
        
        h1
            font-size: 22px
            margin: 0
        
        a.button
            float: right

        &:after
            content: ""
            clear: both
            display: block

    #tools
        margin: 0
        padding: 0
        overflow-x: auto
        overflow-y: hidden

        // table based system
        table.inner
            border: 0
            margin: 0
            padding: 0

            td
                padding: 0

        // div based system
        div.step
            display: inline-block
            width: 180px
            margin: 10px 0

            div.wrap
                width: 160px
                margin: 0 auto

            &.orange .box
                background: #FDDDA0

            &.green .box
                background: #BBE19C

            &.dark .box
                background: #000
                color: #FFF

            em.ago
                float: right
                font-size: 11px

            div.box
                background: #CEF2FB
                padding: 10px 20px
                height: 60px
                overflow: hidden

                h3
                    font-size: 16px
                    margin: 0

                p
                    margin: 5px 0 0 0
                    line-height: 1
                    font-size: 12px

footer
    position: fixed
    bottom: 0
    left: 0

    &#wide
        width: 100%

        p
            text-align: center

    &#bottom
        width: 250px

        .wrap
            margin-top: 20px
            padding: 20px 10px

.button
    display: inline-block
    padding: 6px 30px
    text-decoration: none
    position: relative
    line-height: 1

    &:active
        top: 1px